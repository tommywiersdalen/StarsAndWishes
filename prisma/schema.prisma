generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Answer {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  characterQuestion1 String
  characterQuestion2 String
  dateAdded          DateTime @db.Date
  playerQuestion1    String
  playerQuestion2    String
  user               User     @relation(fields: [userId, userName], references: [id, userName])
  userId             String   @db.ObjectId
  userName           String   @db.ObjectId
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  isDM     Boolean
  password String
  userName String   @unique @db.ObjectId
  Answer   Answer[]

  @@unique([id, userName])
}
